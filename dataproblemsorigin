    <script>
        function showExample(title, content, impact) {
            const box = document.getElementById('example-box');
            const titleEl = document.getElementById('example-title');
            const contentEl = document.getElementById('example-content');
            const impactEl = document.getElementById('example-impact');

            box.classList.remove('hidden');
            titleEl.textContent = title;
            contentEl.textContent = content;
            impactEl.textContent = impact;

            // Smooth scroll to the example box if on mobile
            if(window.innerWidth < 768) {
                box.scrollIntoView({ behavior: 'smooth' });
            }
        }
    </script>
